*
  margin: 0
  padding: 0
  box-sizing: border-box

body
  font: 13px Helvetica, Arial
  position: absolute
  width: 100%
  height: 100%
  overflow: hidden

#game
  width: 100%
  height: 100%
  display: flex
  flex-direction: row
  #players
    display: flex
    flex-direction: column
    width: 20%
    font-size: 20px
    player-height = 28px
    .player,
    .join
      height: player-height
      line-height: player-height
    .player
      display: flex
      flex-direction: row
      .name
        flex-grow: 1
      .kick
        display: inline-block
        width: player-height
        height: player-height
        background: red
        font-weight: bold
        color: white
        text-align: center
        cursor: pointer
    .join
      text-align: center
      background: green
      color: white
      font-weight: bold
      height: player-height
      cursor: pointer
