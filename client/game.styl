*
  margin: 0
  padding: 0
  box-sizing: border-box

body
  font: 13px Helvetica, Arial
  position: absolute
  width: 100%
  height: 100%
  overflow: hidden

#game
  width: 100%
  height: 100%
  display: flex
  flex-direction: row
  #players
    display: flex
    flex-direction: column
    width: 50%
    font-size: 20px
    player-height = 28px
    .player,
    .join
      height: player-height
      line-height: player-height
    .player
      display: flex
      flex-direction: row
      .name
        flex-grow: 1
        padding: 0 5px
      .cards
        height: player-height
        display: flex
        flex-direction: row
        .stack
          height: player-height
          display: flex
          flex-direction: row
          align-items: center
          padding: 0 5px
          &.hand
            background: #0b0
          &.pile
            background: #bb0
          &.lost
            background: #b00
          .card
            card-height = player-height - 5px
            height: card-height
            width: card-height
            border-radius: 50%
            &.flower
              background-color: white
            &.skull
              background-color: black
      .kick
        display: block
        width: player-height
        height: player-height
        background: red
        font-weight: bold
        color: white
        text-align: center
        cursor: pointer
    .join
      text-align: center
      background: green
      color: white
      font-weight: bold
      height: player-height
      cursor: pointer
