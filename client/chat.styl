*
  margin: 0
  padding: 0
  box-sizing: border-box

body
  font: 13px Helvetica, Arial
  position: absolute
  width: 100%
  height: 100%
  overflow: hidden

#chat
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  form
    display: flex
    padding: 3px
    background: #000
    input
      &[type="text"]
        flex-grow: 1
        border: 0
        padding: 10px
        margin-right: 5px
      &[type="submit"]
        background: rgb(130, 224, 255)
        border: none
        padding: 10px
  #messages
    flex-grow: 1
    display: flex
    flex-direction: column-reverse
    overflow-y: scroll
    > div
      padding: 5px 10px
      &:nth-child(odd)
        background: #eee
